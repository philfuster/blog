---
import "../styles/style.css"

const { pageTitle } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link rel="icon" href="/nodes-connect-favicon.svg" type="image/svg+xml">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="generator" content={Astro.generator}>
  <title>{pageTitle}</title>
</head>
<body>
  <div class="theme-wrapper">
    <main class="page-layout layout zone">
      <h1>{pageTitle}</h1>
      <slot />
    </main>
  </div>
</body>
<style>
  .theme-wrapper {
    min-height: 100vh;
  }

  .page-layout {
    margin: 0 auto;
  }
</style>
</html>
